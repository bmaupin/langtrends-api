{
  "env": {
    "jest": true
  },
  "extends": "loopback",
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "plugins": ["json"],
  "rules": {
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "linebreak-style": ["error", "unix"],
    "max-len": [
      "error",
      120,
      {
        "ignoreStrings": true,
        "ignoreUrls": true
      }
    ],
    "object-curly-spacing": ["warn", "always"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "always"
      }
    ]
  }
}
