{
  "env": {
    "jest": true,
  },
  "extends": "loopback",
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "plugins": [
    "json"
  ],
  "rules": {
    "indent": [
      "error",
      2,
      { "SwitchCase": 1 }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "max-len": [
      "error",
      120
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}
